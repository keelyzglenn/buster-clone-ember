{{#if updateArticleForm}}
  <h4>Update {{article.title}} by {{article.author}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        {{input value=description id="description"}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'update' article}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateArticleForm'}}>Update</button>
{{/if}}
